{
    "name": "digipolisgent/api-client",
    "homepage": "https://github.com/digipolisgent/php_package_api-client",
    "description": "This package provides interfaces and abstract implementations to create an API client.",
    "keywords": [
        "digipolisgent",
        "api",
        "client"
    ],
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Peter Decuyper",
            "email": "peter.decuyper@digipolis.gent"
        },
        {
            "name": "Jelle Sebreghts",
            "email": "sebreghts.jelle@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "psr/http-message": "^1.0",
        "guzzlehttp/guzzle": "^6.0",
        "psr/simple-cache": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^2.3",
        "phpro/grumphp": "^0.15.2",
        "sebastian/phpcpd": "^4.1",
        "phpmd/phpmd": "^2.7",
        "phpstan/phpstan": "^0.11.15",
        "sensiolabs/security-checker": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "DigipolisGent\\API\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gent\\Tests\\API\\": "tests/"
        }
    },
    "scripts": {
        "grumphp": "vendor/bin/grumphp run --ansi",
        "phpcs": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit",
        "coverage": "vendor/bin/phpunit --coverage-html ./build/coverage",
        "phpstan": "vendor/bin/phpstan analyse --level=7 ./src",
        "post-install-cmd": "vendor/bin/grumphp git:init"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.0.x-dev"
        }
    }
}
